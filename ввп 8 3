#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");
         int A, B;
    float n, ostatok;
//Даны целые положительные числа A и B (A > B). 
//На отрезке длины A размещено максимально возможное количество
//отрезков длины B (без наложений). Найти количество отрезков B,
//размещенных на отрезке A. 
    printf ("Введите числа A и B\n");   
    scanf ("%d" "%d", &A, &B);  
        n = A/B;
        ostatok = A - n*B;
//Вывод результатов   
    printf("Количество отрезков B, помещающихся в отрезке A =  %6.1f\n", roundf(n));
    printf("Незанятый остаток =  %6.1f\n", ostatok);
        return 0;   
}
