#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");
    int day;
//Дни недели пронумерованы следующим образом: 0 — воскресенье,
//1 — понедельник, 2 — вторник, . . . , 6 — суббота. 
//Дано целое число K, лежащее в диапазоне 1–365. 
//Определить номер дня недели для K-го дня года, если известно,
//что в этом году 1 января было понедельником. 
    printf ("Введите  K - номер для года ");   
    scanf ("%d/t", &day); 
//Вывод результатов  
    if ((day > 0) && (day < 366)){
        while (day > 7) {
            day -= 7; }}
    else{printf("Это число не может быть номером дня в году");}
    
        printf("Это был день недели: %d", day) ;
        return 0;   
}
