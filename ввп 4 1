#include <stdio.h> //Подключение библиотеки ввода/вывода
#include <string.h>
#include <math.h> //Подключение библиотеки математических функций
#include <locale.h>
//Точка входа в программу - главная функция
int main() {
    setlocale(LC_ALL, "Russian");
    int a, b;
    float S, P;
//Вычисляем площадь и периметр прямоугольника
    printf ("Вычисление площади и периметра прямоугольника S = a*b и P=2*(a+b)\n");
    printf ("Введите значение стороны a: ");
    scanf ("%d", &a);
    printf ("Введите значение стороны b: ");
    scanf ("%d", &b);
   
    S = a*b;
    P = 2*(a+b);
//Вывод результатов
   // printf("Корни уравнения x1 = %10.3f, x2 = %10.3f", x1, x2);
 
    printf("Значение площади прямоугольника %6.2f\n",S);
    printf("Значение периметра прямоугольника %6.2f",P);
 
    return 0;
}
