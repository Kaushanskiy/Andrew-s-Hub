#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");
    int A;
//Дано целое число. Вывести его строку-описание вида «отрицательное 
//четное число», «нулевое число», «положительное нечетное число» и т. д.
    
    printf ("Введите число \n");   
    scanf ("%d/t", &A);
    
    //Вывод результато
    if ((A == 0)){ printf("Нулевое число");}
    if ((A%2 == 0) && (A > 0)){ printf("Положительное чётное число");}
    if ((A%2 != 0) && (A > 0)){ printf("Положительное нечётное число");}
    if ((A%2 == 0) && (A < 0)){ printf("Отрицательное чётное число");}
    if ((A%2 != 0) && (A < 0)){ printf("Отрицательное нечётное число");}
    return 0;
}
