#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");
     
    float A, B, X;
//Решить линейное уравнение A·x + B = 0,
//заданное своими коэффициентами A и B (коэффициент A не равен 0). 
    printf ("Введите коэффициенты уравнения A и B\n");   
    scanf ("%f" "%f", &A, &B);  
    if (A != 0){
    
    X = -B/A;
//Вывод результатов   
    printf("Решение уравнения  A·x + B = 0 \n");   
    printf("%f", X); }
    else{printf(" A = 0 - деление на ноль, решение уравнения невозможно \n");   }
        return 0;   
 }
