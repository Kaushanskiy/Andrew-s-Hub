    printf ("Введите целое положительное число \n");   
    scanf ("%d/t", &x);
    if ((x>999) && (x<10000)){
    
    if ((x / 1000 == x % 10) && ((x / 100) % 10 == (x % 100) / 10)){
       //Вывод результатов   
    printf("Данное число читается одинаково слева направо и справа налево");}
            else{printf("Условие не соблюдается");
            }  }   
