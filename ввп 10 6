#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");
    int x, a, b, c;
//Даны целые числа a, b, c, являющиеся сторонами некоторого треугольника. 
//Проверить истинность высказывания: «Треугольник со сторонами a, b, c является прямоугольным».

    printf ("Введите стороны треугольника \n");   
    scanf ("%d/t", &a);
    scanf ("%d/t", &b);
    scanf ("%d/t", &c);
    
    if (a*a == b*b + c*c) {
               //Вывод результатов   
    printf("Треугольник со сторонами a, b, c является прямоугольным          ");}
    if (b*b == a*a + c*c){
     printf("Треугольник со сторонами a, b, c является прямоугольным          ");}
    if (c*c == a*a + b*b){
    printf("Треугольник со сторонами a, b, c является прямоугольным          ");}
    else {printf("Треугольник не является прямоугольным" );}
            
    return 0;
}
