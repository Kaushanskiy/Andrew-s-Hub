#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");
    int A, B, max;
//Даны две переменные целого типа: A и B. Если их значения не равны,
//то присвоить каждой переменной большее из этих значений, а если равны,
//то присвоить переменным нулевые значения. Вывести новые значения переменных A и B.
    max = 0;
    printf ("Введите две переменные A и B \n");   
    scanf ("%d/t", &A);
    scanf ("%d/t", &B);
    
    if (A > B){ max = A;}
        else {max = B;};
    if(A != B){
        A = max;
        B = max;}
        else{
            A = 0;
            B = 0;}    
               //Вывод результатов   
    printf("Новые значения переменных A и B %d %d \n",A,B);  
    return 0;
}
