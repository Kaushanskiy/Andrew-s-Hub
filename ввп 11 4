#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");
    int x,y;
//Даны координаты точки, не лежащей на координатных осях OX и
//OY. Определить номер координатной четверти, в которой находится данная точка
    
    printf ("Введите координаты x,y \n");   
    scanf ("%d/t", &x);
    scanf ("%d/t", &y);
    
    //Вывод результато
    if ((x > 0) && (y > 0)){ printf("Точка лежит в 1 координатной плоскости");}
    if ((x > 0) && (y < 0)){ printf("Точка лежит в 4 координатной плоскости");}
    if ((x < 0) && (y > 0)){ printf("Точка лежит во 2 координатной плоскости");}
    if ((x < 0) && (y < 0)){ printf("Точка лежит в 3 координатной плоскости");}
    return 0;
}
