#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");

//Дано целое число N (> 0). Найти квадрат данного числа, 
//используя для его вычисления следующую формулу: 
//N2 = 1 + 3 + 5 + . . . + (2•N − 1). 
//После добавления к сумме каждого слагаемого выводить
//текущее значение суммы
  
	int n;
   printf(" Введите целое число N:\n");
   scanf ("%i", &n);
 
   int rez=0;
   int i;
   for  (i =1; i<=(2*n-1); i+=2){
     rez += i;
     printf("%i \n ",rez);
  }
   return 0;
}
