#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");   
    float a, rad1, pi = 3.14;
 //Перевод градусной меры угла в радианы
    printf ("Введите значение угла a  - в градусах\n");   
    scanf ("%f", &a);   
    if ((a > 0) && (a < 361)){ 
        rad1 = a*(pi/180);
//Вывод результатов   
    printf("Значение угла a - в радианах \n");   
    printf("%7.3f\n",rad1);  
    }
    else{printf("Такого угла не существует \n");} 
       return 0;   
 }
