#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   

//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");

//Дано целое число N (> 1), а также первый член A и 
//знаменатель D геометрической прогрессии. Сформировать и
//вывести массив размера N, содержащий N первых членов 
//данной прогрессии: A, A•D, A•D2 , A•D3 , . . .

int a[10];
    int d,n, i,pow;
 
    printf("Размерность массива N: ");
    scanf("%i",&n);
 
    printf("Первый член геометрической прогрессии A[0]: ");
    scanf("%i",&a[0]);
 
    printf("Знаменатель геометрической прогрессии D: ");
    scanf("%i",&d);
    pow=1;
    for (i=1; i<n; ++i){
        pow*=d;
        a[i]=a[0]*pow;
    }
 
    for (i=0; i<n; ++i) printf("%i : %i\n",i+1,a[i]);
    return 0;
}
