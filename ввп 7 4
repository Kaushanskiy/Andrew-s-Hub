#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");   
     
    float X, Y, cena, c1, c2;
 
//Сколько стоит килограмм конфет
    printf ("Сколько купили кг конфет\n");   
    scanf ("%f", &X);   
    printf ("Сколько заплатили в рублях\n");   
    scanf ("%f", &cena);   
    c1 = cena/X;
//Вывод результатов   
    printf("Один килограмм конфет стоит  \n");   
    printf("%7.3f\n",c1);  
    printf ("Сколько купили кг конфет хотели бы ещё купить\n");   
    scanf ("%f", &Y);   
    c2 = c1*Y;
    printf("Y килограмм конфет стоит  \n");   
    printf("%7.3f\n",c2);  
       return 0;   
 }
