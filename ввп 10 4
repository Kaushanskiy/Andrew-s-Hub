#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");
    int x, a, b, c;
//Дано трехзначное число. Проверить истинность высказывания: 
//«Цифры данного числа образуют возрастающую или убывающую последовательность».

    printf ("Введите целое положительное число \n");   
    scanf ("%d/t", &x);
    if ((x>99) && (x<1000)){
    a = x%10;
    b = (x/10)%10;
    c = x/100;
    
    if ((c<b && b<a)){
       //Вывод результатов   
    printf("Цифры данного числа образуют возрастающую последовательность");}
            else{    
            if ((a<b && b<c)){printf("Цифры данного числа образуют убывающую последовательность");}
                else{printf("Цифры данного числа не образуют последовательность: ни возрастающую, ни убывающую");
            }  }   }   
    else{printf("Число не является трёхначным");}
    
            return 0;   
}
