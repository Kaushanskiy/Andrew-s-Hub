#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");

//Начальный вклад в банке равен 1000 руб. Через каждый
//месяц размер вклада увеличивается на P процентов от 
//имеющейся суммы (P — вещественное число, 0 < P < 25).
//По данному P определить, через сколько месяцев размер 
//вклада превысит 1100 руб., и вывести найденное количество
//месяцев K (целое число) и итоговый размер вклада S 
//(вещественное число).
  
	float p;
   printf("Процент по вкладу P:\n");
   scanf ("%f", &p);
   int k=1;
   float s=1000;
   while (s<=1100) {
       ++k;
       s+=s*p/100;
   }
   printf("Количество месяцев K: %i\nИтоговый размер вклада  S:%f\n",k,s);
   return 0;
}
