#include <stdio.h> //Подключение библиотеки ввода/вывода   
#include <string.h>   
#include <math.h> //Подключение библиотеки математических функций   
#include <locale.h>   
// Подпрограмма Quarter
int Quarter(float x, float y){
    if ((x>0)&&(y>0)){return 1;}
    if ((x<0)&&(y>0)){return 2;}
    if ((x<0)&&(y<0)){return 3;}
    if ((x>0)&&(y<0)){return 4;}
}
//Точка входа в программу - главная функция   
int main() {   
    setlocale(LC_ALL, "Russian");

//Описать функцию Quarter(x, y) целого типа, 
//определяющую номер координатной четверти, в которой 
//находится точка с ненулевыми вещественными координатами 
//(x, y). С помощью этой функции найти номера координатных
//четвертей для трех точек с данными ненулевыми координатами
  
int i;
    for (i=1; i<=3; ++i){
        float x,y;
        printf("Введите координату X:\n");
        scanf("%f", &x);
        printf("Введите координату Y:\n");
        scanf("%f", &y);
        printf("Находится в: %i четверти \n",Quarter(x,y));
     }
    return 0;
}
